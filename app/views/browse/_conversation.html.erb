<div class="row">
  <div class="col-12 top-bar">
    <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
    <%= link_to image_tag(@profile.images.first, width: "40px", height: "40px", class: "float-left profile-thumb rounded-circle mr-3"),"#" %>
    <p class="text-muted mt-2">You matched with <%= @profile.first_name %> on <%= @match.created_at.strftime("%d/%m/%Y") %></p>
  </div>
</div>
<div class="row">
  <div class="col-12 text-center">
    <p class="mt-3">You are matched with <span><%= @profile.first_name %></span> <%= time_ago_in_words @match.created_at %> ago.</p>
    <%= link_to image_tag(@profile.images.first, width: "200px", height: "200px", class: "rounded-circle mt-3 mb-5"),"#" %>
    <p>Send a message</p>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-5 bottom-bar">
    <form>
      <div class="input-group">
        <input type="text" name="message" value="" placeholder="Enter your message" class="form-control form-control-lg">
        <div class="input-group-append">
          <input type="submit" name="submit" value="Send" class="btn btn-success btn-lg pl-5 pr-5">
        </div>
      </div>
    </form>
  </div>
</div>